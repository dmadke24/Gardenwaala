@using GardenViewModel
@model ChangePasswordViewModel
@using (Html.BeginForm("ChangePwd", "MyAccount", FormMethod.Post, new { @class = "main-form full", autocomplete="off" }))
{
    <div class="row">
        <div class="col-xs-12">
            <div class="input-box mb_20">
                <label for="old-pass">Old-Password</label>
                @Html.PasswordFor(c => c.OldPassword, new { @class = "input-text required-entry", autocomplete = "off", placeholder = "Old Password" })
                @Html.ValidationMessageFor(c => c.OldPassword)
            </div>
        </div>
        <div class="col-sm-6">
            <div class="input-box mb_20">
                <label for="login-pass">Password</label>
                @Html.PasswordFor(c => c.NewPassword, new { @class = "input-text required-entry", autocomplete = "off", placeholder = "New Password" })
                @Html.ValidationMessageFor(c => c.NewPassword)
            </div>
        </div>
        <div class="col-sm-6">
            <div class="input-box mb_20">
                <label for="re-enter-pass">Re-enter Password</label>
                @Html.PasswordFor(c => c.ConfirmPassword, new { @class = "input-text required-entry", autocomplete = "off", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(c => c.ConfirmPassword)
            </div>
        </div>
        <div class="col-xs-12"> <input type="submit" class="btn btn-black pull-left" value="Change Password" /> </div>
    </div>
}
@section Register
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

}