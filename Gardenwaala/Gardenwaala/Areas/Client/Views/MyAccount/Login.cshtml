@using GardenViewModel
@model LoginViewModel

<div class="breadcrumb">
    <h1>Login</h1>
</div>
<!-- =====  BREADCRUMB END===== -->
<!-- =====  CONTAINER START  ===== -->
<div class="container">
    <div class="row ">
        <div id="column-left" class="col-sm-4 col-md-4 col-lg-3">
            <div class="left-special left-sidebar-widget">
                <div class="heading-part mb_20 ">
                    <h2 class="sub_title pull-left">Top Products</h2>
                </div>
                @Html.Action("BestSeller", "MyAccount")
            </div>
        </div>
        <div class="bg-gray col-sm-8 col-md-8 col-lg-9 mb_30 ptb_80">
            <!-- contact  -->
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="panel-login">
                        <div class="panel-heading">
                            <div class="row mb_20">
                                <div class="col-xs-12 text-center sub_title"> <a href="#" class="active" id="login-form-link">Login</a> </div>
                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    @using (Html.BeginForm("Login", "MyAccount", FormMethod.Post, new { autocomplete = "Off" }))
                                    {
                                        <div class="form-group">
                                            @Html.TextBoxFor(e => e.Username, new { @class = "inputtype-new input-text required-entry validate-email", placeholder = "Enter Email Id" })
                                            @Html.ValidationMessageFor(e => e.Username, "",new { @class="garden-error-span"})
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(e => e.Password, new { @class = "inputtype-new input-text required-entry validate-password", placeholder = "Enter Password" })
                                            @Html.ValidationMessageFor(e => e.Password, "", new { @class = "garden-error-span" })
                                        </div>

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="text-center"><a href="@Url.Action("Register","MyAccount")" class="forgot-password">New User? Register</a></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="text-center"><a href="@Url.Action("ForgotPwd","MyAccount")" class="forgot-password">Forgot Your Password?</a></div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- =====  CONTAINER END  ===== --> 