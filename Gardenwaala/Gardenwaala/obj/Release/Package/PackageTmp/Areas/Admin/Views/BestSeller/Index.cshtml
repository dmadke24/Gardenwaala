@section LoadDataTable{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Areas/Admin/assets/js/UserAdmin.js"></script>
    <script>
        $(document).ready(function () {
            var oTable=$('#tbl').DataTable({
                "pageLength":@(TempData.Peek("PageSize")!=null?TempData.Peek("PageSize"):20),
                "lengthMenu": [5, 10, 15, 20],
                "processing": true,
                "serverSide": true,
                "filter": true,
                "orderMulti": false,
                rowReorder: {
                    selector: 'td:nth-child(1)'
                },
                "responsive": true,
                "ajax": {
                    "url": "@Url.Action("LoadData")",
                    "type": "post",
                    "dataType": "json"
                },
                "columnDefs": [
                    {
                        "width": "1%", "targets": 0, 'searchable': false, 'orderable': false, 'className': 'flat',
                        'render': function (data, type, full, meta) {
                            return '<input type="checkbox" name="Ids" id="Ids" value="' + data + '"/>';
                        },
                    },
                    { "width": "25%", "targets": 1 ,'orderable': true,
                        'render':function(data, type, full, meta){
                            return data + ' (' + full['Priority'] + ')';
                        }
                    },
                    { "width": "12%", "targets": 2 ,'orderable': false},
                    { "width": "12%", "targets": 3, 'orderable': true },
                    {
                        "width": "15%", "targets": 4, 'orderable': false,
                        'render': function (data, type, full, meta) {
                            if (data)
                                return '<img width="40%" src="/Areas/Admin/UploadImg/BestSellerImg/' + data + '" />';
                            else
                                return 'N/A';
                        }
                    },
                    { "width": "8%", "targets": 5 ,'orderable': false},
                    { "width": "8%", "targets": 6 ,'orderable': true},
                    { "width": "15%", "targets": 7, 'orderable': false },
                    { "width": "15%", "targets": 8, 'orderable': false },

                ],
                "columns": [
                    { "data": "BestSellerId", "name": "BestSellerId" },
                    { "data": "Priority", "name": "HomeSlide" },
                    { "data": "Name", "name": "Name" },
                    { "data": "Price", "name": "Price" },
                    { "data": "Image", "name": "Image" },
                    { "data": "NetWeight", "name": "NetWeight" },
                    { "data": "GrossWeight", "name": "GrossWeight" },

                    {
                        "data": "Status", "name": "Status", 'orderable': false,
                        'render': function (data) {
                            if (data == true)
                                return '<span class="label label-sm label-success">Active</span>';
                            else
                                return '<span class="label label-sm label-warning">Inactive</span>';
                        }
                    },
                    {
                        "data": "BestSellerId", 'orderable': false, "render": function (data) {
                            return '<a title="Edit" href="@Url.Action("Edit")/' + data + '" class="green"><i class="ace-icon fa fa-pencil bigger-130"></i></a>   <a title="Delete" href="@Url.Action("Delete")/' + data + '" class="red" onclick="return confirm(\'Are you Sure to Delete?\')"><i class="ace-icon fa fa-trash-o bigger-130"></i></a>'
                        }
                    }
                ],
                "order": [[1, 'asc']],
                initComplete: function () {
                    $('#tbl_filter input').unbind();
                    $('#tbl_filter input').bind('keyup', function (e) {
                        if (e.keyCode == 13 || !this.value) {
                            oTable.search(this.value).draw();
                        }
                    });
                }
            });
        });
    </script>
}