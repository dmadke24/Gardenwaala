@using GardenViewModel
@model UserViewModel
<div class="breadcrumb">
    <h1>Account</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div id="exTab3">
                <ul class="nav nav-tabs">
                    <li class="active"> <a href="#r1" data-toggle="tab">Dashboard</a> </li>
                    <li><a href="#r2" data-toggle="tab">Account Details</a> </li>
                    <li><a href="#r3" data-toggle="tab">My Order List</a> </li>
                    <li><a href="#r4" data-toggle="tab">Change Password</a> </li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="tab-content ">
                <div class="tab-pane active" id="r1">
                    <div class="heading-part mb_10">
                        <h3 class="main_title">Account Dashboard</h3>
                    </div>
                    <div class="heading-part">
                        <h3 class="sub_title">Hello, @Model.Name</h3>
                    </div>
                    <p>From your My Account Dashboard you have the ability to view a snapshot of your recent account activity and update your account information. Select a link below to view or edit information.</p>
                    <div class="heading-part mtb_20">
                        <h3 class="sub_title">Account Information</h3>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="cart-total-table address-box commun-table">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Shipping Address</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <ul>
                                                        <li class="inner-heading"> <b>@Model.Name</b> </li>
                                                        <li>
                                                            <p>@Model.Address</p>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="cart-total-table address-box commun-table">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Billing Address</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <ul>
                                                        <li class="inner-heading"> <b>@Model.Name</b> </li>
                                                        <li>
                                                            <p>@Model.Address</p>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="r2">
                    @Html.Action("UserInfo")
                </div>
                <div class="tab-pane" id="r3">
                    @Html.Action("MyOrders", "MyAccount")

                </div>
                <div class="tab-pane" id="r4">
                    <h3 class="mb_10 main_title">Change Password</h3>
                    @Html.Action("ChangePassword","MyAccount")
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- =====  CONTAINER END  ===== --> 