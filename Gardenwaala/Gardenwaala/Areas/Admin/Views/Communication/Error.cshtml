@{
    ViewBag.Heading = "Fill Official Email & SMS";
}
<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->

        <div class="error-container">
            <div class="well">
                <h1 class="grey lighter smaller">
                    <span class="blue bigger-125">
                        <i class="ace-icon fa fa-random"></i>
                    </span>
                    Something Went Wrong
                </h1>

                <hr />
                <h3 class="lighter smaller">
                    You didn't specify your Official Email & SMS for CRM
                    <i class="ace-icon fa fa-wrench icon-animated-wrench bigger-125"></i>
                </h3>

                <div class="space"></div>

                <div>
                    <h4 class="lighter smaller">It is required for following purpose:</h4>

                    <ul class="list-unstyled spaced inline bigger-110 margin-15">
                        <li>
                            <i class="ace-icon fa fa-hand-o-right blue"></i>
                            Official Email & SMS are necessary to send SMS and Email to your Customers and Enquiries
                        </li>

                        <li>
                            <i class="ace-icon fa fa-hand-o-right blue"></i>
                            It is also used to send Auto Birthday SMS
                        </li>
                    </ul>
                </div>

                <hr />
                <div class="space"></div>

                <div class="center">
                    <a href="javascript:history.back()" class="btn btn-grey">
                        <i class="ace-icon fa fa-arrow-left"></i>
                        Go Back
                    </a>

                    <a href="@Url.Action("UserProfile","Account")#official" class="btn btn-primary">
                        <i class="ace-icon fa fa-tachometer"></i>
                        Official Email & SMS
                    </a>
                </div>
            </div>
        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
