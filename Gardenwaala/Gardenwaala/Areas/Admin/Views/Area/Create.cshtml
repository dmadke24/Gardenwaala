@model AreaViewModel
@{
    ViewBag.Heading = "Area";
    string action;
    ViewBag.CurrentMenu = "ar";
    if (Model == null)
    {
        ViewBag.Title = "Create";
        action = "Create";
        ViewBag.Breadcrumbs = "New Area";
    }
    else
    {
        ViewBag.Title = "Edit";
        action = "Edit";
        ViewBag.Breadcrumbs = "Edit Area";
    }
}
<div class="page-header">
    <h1>
        @action
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Area
        </small>
    </h1>
</div><!-- /.page-header -->

@Html.ValidationSummary(true, "Error", new { @class = "alert alert-danger" })
<div class="box-b order-new">
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            @using (Html.BeginForm(action, "Area", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()

                if (action == "Edit")
                {
                    @Html.HiddenFor(m => m.AreaId)
                }
                else
                {
                    @Html.Hidden("AreaId", 0)
                }
                <div class="form-group">
                    @Html.LabelFor(m => m.CityId, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-5">
                        @Html.DropDownListFor(m => m.CityId, new SelectList(ViewBag.CityList, "ID", "Text"), "Select City", new { @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.CityId, "", new { @class = "col-xs-12 col-sm-6" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AName, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(m => m.AName, new { @class = "col-xs-10 col-sm-5 width-100" })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.AName, "", new { @class = "col-xs-12 col-sm-6" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Pincode, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(m => m.Pincode, new { @class = "col-xs-10 col-sm-5 width-100" })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Pincode, "", new { @class = "col-xs-12 col-sm-6" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Status, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-5">
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(m => m.Status, "true", new { @class = "ace", @checked = "checked" })
                                <span class="lbl"> Active</span>
                            </label>
                            <label>
                                @Html.RadioButtonFor(m => m.Status, "false", new { @class = "ace" })
                                <span class="lbl"> Inactive</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" type="submit">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Submit
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Reset
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Validation{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Areas/Admin/AdminDesign/js/chosen.jquery.min.js"></script>
}

