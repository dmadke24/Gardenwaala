@{
    ViewBag.Heading = "Best Seller";
    ViewBag.CurrentMenu = "best";

    string delTitle = "";
    string delMsg = "";
    string delClass = "";
        if (TempData["delStatus"] != null)
    {
        if (Convert.ToBoolean(TempData["delStatus"]) == true)
        {
            delTitle = "Success";
            delMsg = "Record Deleted Successfully";
            delClass = "success";
        }
        else
        {
            delTitle = "Error";
            delMsg = "Can't Delete Record";
            delClass = "danger";
        }
    }
}

<div class="page-header">
    <h1>
        Best Seller Products
    </h1>
</div><!-- /.page-header -->
@if (TempData["delStatus"] != null)
{
    <div class="alert alert-@delClass" id="divDel">
        <strong>
            <i class="ace-icon fa fa-times"></i>
            @delTitle!
        </strong>
        @delMsg
    </div>
}
<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <div class="row">
            <div class="col-xs-12">
                <div class="table-header">
                    <div class="row">
                        <div class="col-xs-8">
                            @using (Html.BeginForm("Go", "BestSeller", FormMethod.Post, new { id = "frmStatus", name = "frmStatus" }))
                            {
                                <span id="head">Result For "Food Best Seller"</span>
                                <input type="hidden" name="skip" id="skip" />
                                <input type="hidden" name="sortColumn" id="sortColumn" />
                                <input type="hidden" name="sortDir" id="sortDir" />
                                <input type="hidden" name="pgSize" id="pgSize" />
                                <input type="hidden" name="chkIds" id="chkIds" />
                                <div id="divStatus" class="row">
                                    <div class="col-sm-3">
                                        <select name="Status" id="Status" class="mymargin form-control input-sm">
                                            <option value="">Change Status</option>
                                            <option value="true">Active</option>
                                            <option value="false">Inactive</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-1">
                                        <input type="submit" value="Go" id="btnGo" class="btn btn-info btn-sm" />
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="Status" generated="true" class="field-validation-error"></label>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-xs-4">
                            <div class="pull-right">
                                <a class="btn icon-btn btn-danger" href="@Url.Action("Create")"><span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-danger"></span>New Product</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- div.table-responsive -->
                <!-- div.dataTables_borderWrap -->
                <div>
                    <table id="tbl" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="SelectAll" /></th>
                                <th>Priority</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th>Net Weight</th>
                                <th>Gross Weight</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>

                </div>
            </div>
        </div>
    </div><!-- /.col -->
</div><!-- /.row -->
