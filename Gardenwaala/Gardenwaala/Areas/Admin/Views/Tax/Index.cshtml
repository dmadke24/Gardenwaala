@model TaxViewModel
@{
    ViewBag.Heading = "Tax Details";
    ViewBag.CurrentMenu = "tax";
}
<div class="page-header">
    <h1>
        Tax Details
    </h1>
</div><!-- /.page-header -->
@Html.ValidationSummary(true, "Error", new { @class = "alert alert-danger" })
<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        @using (Html.BeginForm("Update", "Tax", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("UserId", 0)
            <div class="form-group">
                @Html.LabelFor(m => m.CGST, new { @class = "col-sm-3 control-label no-padding-right" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.CGST, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(m => m.CGST, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SGST, new { @class = "col-sm-3 control-label no-padding-right" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.SGST, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(m => m.SGST, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.VAT, new { @class = "col-sm-3 control-label no-padding-right" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.VAT, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(m => m.VAT, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ServiceTax, new { @class = "col-sm-3 control-label no-padding-right" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.ServiceTax, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(m => m.ServiceTax, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>
            <div class="space-4"></div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Submit
                    </button>
                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </button>
                </div>
            </div>
        }
    </div>
</div>
@section Validation{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

