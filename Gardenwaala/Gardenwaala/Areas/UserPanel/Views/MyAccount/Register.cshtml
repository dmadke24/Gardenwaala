<div class="main-nav shadow-sm">
    @Html.Action("HeaderMenu", "Home")
</div>
</div>
<section class="py-5 bg-light border-top">
    <div class="container">
        <div class="modal-content">
            <div class="modal-body register-box">
                <div class="login-modal">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="login-modal-right p-4">
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div class="tab-paneactive" id="register">
                                        <h5 class="heading-design-h5 text-dark">Create an account with</h5>
                                        @using (Html.BeginForm("RegisterUser", "MyAccount", FormMethod.Post, new { @class = "form-horizontal HealthLedger-form-horizontal", role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <fieldset class="form-group mt-4">
                                                <label>Name</label>
                                                @Html.TextBox("Name", "", new { @class = "form-control", placeholder = "Enter Name", required = "true" })
                                            </fieldset>
                                            <fieldset class="form-group mt-4">
                                                <label>Enter Contact No.</label>
                                                @Html.TextBox("ContactNo", "", new { @class = "form-control", placeholder = "Enter Contact Number", required = "true" })

                                            </fieldset>
                                            <fieldset class="form-group">
                                                <label>Enter Email Id</label>
                                                @Html.TextBox("Email", "", new { @class = "form-control", placeholder = "Enter Email Id", required = "true" })

                                            </fieldset>
                                            <fieldset class="form-group">
                                                <label>Enter Password</label>
                                                @Html.Password("Password", "", new { @class = "form-control", placeholder = "Enter Password", required = "true" })
                                            </fieldset>
                                            <fieldset class="form-group">
                                                <button type="submit" class="btn btn-lg btn-primary btn-block">
                                                    Create Your
                                                    Account
                                                </button>
                                            </fieldset>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck2" checked="checked">
                                                <label class="custom-control-label" for="customCheck2">
                                                    I Agree with <a href="#">Term and Conditions</a>
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <ul class="mt-4 mr-4 nav nav-tabs-login float-right position-absolute">
                                <li>
                                    Already have an account? <a class="nav-link-login active" href="@Url.Action("Login","MyAccount")">
                                        <i class="icofont-ui-lock"></i> LOGIN
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Contact Us -->
