@using GardenViewModel
@model OrderViewModel
@{
    double total = 0;

}
<div class="breadcrumb">
    <h1>My Order</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 mb_xs-30">
            <div class="cart-item-table commun-table">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Sub Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OrderDetailsViewModel odt in Model.ProductList)
                            {
                                <tr>
                                    <td>
                                        <a href="javascript:void(0);">
                                            <div class="product-image"><img alt="Streetwear" src="~/Areas/Admin/UploadImg/ProductImg/@odt.Image"></div>
                                        </a>
                                    </td>
                                    <td><div class="product-title"> <a href="javascript:void(0);">@odt.ProductName</a> </div></td>
                                    <td>
                                        <ul>
                                            <li>
                                                <div class="base-price price-box"> <span class="price">₹ @odt.Price.ToString("0.00")</span> </div>
                                            </li>
                                        </ul>
                                    </td>
                                    <td>
                                        <ul>
                                            <li>
                                                <div class="base-price price-box"> <span class="price">@odt.Qty</span> </div>
                                            </li>
                                        </ul>
                                    </td>
                                    <td><div class="total-price price-box"> <span class="price">₹ @(odt.Price * odt.Qty).00</span> </div></td>
                                </tr>
                                total += (odt.Price * odt.Qty);
                            }

                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td  class="text-right">Flat Shipping Rate:</td>
                                <td>
                                    <ul>
                                        <li>
                                            <div class="base-price price-box"> <span class="price">₹ 0.00</span> </div>
                                        </li>
                                    </ul>
                                </td>
                            </tr>

                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-right">Total: </td>
                                <td>
                                    <ul>
                                        <li>
                                            <div class="base-price price-box"> <span class="price">₹ @total.ToString("0.00")</span> </div>
                                        </li>
                                    </ul>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
