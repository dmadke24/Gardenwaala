@model GardenViewModel.OrderViewModel
@{
    ViewBag.Heading = "Order Details";
    ViewBag.CurrentMenu = "ord";
    int i = 1;
}

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <div class="space-6"></div>

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="widget-box transparent">
                    <div class="widget-header widget-header-large">
                        <h3 class="widget-title grey lighter">
                            <i class="ace-icon fa fa-leaf green"></i>
                            Customer Order
                        </h3>

                        <div class="widget-toolbar no-border invoice-info">
                            <span class="invoice-info-label">Invoice:</span>
                            <span class="red">#@Model.OrderId</span>

                            <br />
                            <span class="invoice-info-label">Date:</span>
                            <span class="blue">@Model.OrderDt.ToString("dd/MM/yyyy")</span>
                        </div>

                        @*<div class="widget-toolbar hidden-480">
                                <a href="#">
                                    <i class="ace-icon fa fa-print"></i>
                                </a>
                            </div>*@
                    </div>

                    <div class="widget-body">
                        <div class="widget-main padding-24">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="col-xs-11 label label-lg label-info arrowed-in arrowed-right">
                                            <b>Shipping Info</b>
                                        </div>
                                    </div>

                                    <div>
                                        <ul class="list-unstyled spaced">
                                            <li>
                                                <i class="ace-icon fa fa-caret-right blue"></i>@Model.ShipName
                                            </li>

                                            <li class="address_billing">
                                                @Model.ShipAddress
                                            </li>

                                            <li class="address_billing">
                                                @Model.ShipArea, @Model.ShipCity <br />@Model.ShipPinCode
                                            </li>

                                            <li>
                                                <i class="ace-icon fa fa-caret-right blue"></i>
                                                Phone:
                                                <b class="red">@Model.ShipPhone</b>
                                            </li>

                                            <li class="divider"></li>

                                            <li>
                                                <i class="ace-icon fa fa-caret-right blue"></i>
                                                Paymant Info
                                            </li>
                                        </ul>
                                    </div>
                                </div><!-- /.col -->

                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="col-xs-11 label label-lg label-success arrowed-in arrowed-right">
                                            <b>Billing Info</b>
                                        </div>
                                    </div>

                                    <div>
                                        <ul class="list-unstyled  spaced">
                                            <li>
                                                <i class="ace-icon fa fa-caret-right green"></i>@Model.BillName
                                            </li>

                                            <li class="address_billing">
                                                @Model.BillAddress
                                            </li>

                                            <li class="address_billing">
                                                @Model.BillArea, @Model.BillCity <br />@Model.BillPinCode
                                            </li>

                                            <li>
                                                <i class="ace-icon fa fa-caret-right blue"></i>
                                                Phone:
                                                <b class="red">@Model.BillPhone</b>
                                            </li>
                                            <li class="divider"></li>

                                            <li>
                                                <i class="ace-icon fa fa-caret-right green"></i>
                                                Contact Info
                                            </li>
                                        </ul>
                                    </div>
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                            <div class="space"></div>
                            <div>
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="center">#</th>
                                            <th>Product</th>
                                            <th class="hidden-xs">Price</th>
                                            <th class="hidden-480">Quantity</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (OrderDetailsViewModel det in Model.ProductList)
                                        {
                                            <tr>
                                                <td class="center">@(i++)</td>

                                                <td>
                                                    @det.ProductName
                                                </td>
                                                <td class="hidden-xs">
                                                    @det.Price.ToString("0.00")
                                                </td>
                                                <td class="hidden-480"> @det.Qty </td>
                                                <td>@(det.Qty * det.Price).00</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="hr hr8 hr-double hr-dotted"></div>
                            <div class="row">
                                <div class="col-sm-5 pull-right">
                                    <h5 class="pull-right">
                                        Discount:
                                        <span class="red">@Model.DiscountAmt.ToString("0.00")</span>
                                    </h5>
                                    <div class="clearfix"></div>
                                    <h5 class="pull-right">
                                        Shipping Charges:
                                        <span class="red">@Model.DeliveryCharges.ToString("0.00")</span>
                                    </h5>
                                    <div class="clearfix"></div>

                                    <h4 class="pull-right">
                                        Total amount :
                                        <span class="red">@(Model.TotalAmt.ToString("0.00"))</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->
