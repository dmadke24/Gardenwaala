@using GardenViewModel
@model RegisterViewModel
@{
    <!-- For Ajax Call -->
    AjaxOptions opt = new AjaxOptions();
    opt.HttpMethod = "Post";
    opt.Url = Url.Action("RegisterUser", "MyAccount");
    opt.OnSuccess = "ShowMsg";
    opt.LoadingElementId = "ajaxLoader";

}
<!-- =====  BANNER STRAT  ===== -->
<div class="breadcrumb">
    <h1>Register</h1>
</div>
<!-- =====  BREADCRUMB END===== -->
<!-- =====  CONTAINER START  ===== -->
<div class="container">
    <div class="row ">
        <div id="column-left" class="col-sm-4 col-md-4 col-lg-3">
            <div class="left-special left-sidebar-widget">
                <div class="heading-part mb_20 ">
                    <h2 class="sub_title pull-left">Top Products</h2>
                </div>
                @Html.Action("BestSeller", "MyAccount")
            </div>
        </div>
        <div class="bg-gray col-sm-8 col-md-8 col-lg-9 mb_30 ptb_80">
            <!-- contact  -->
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="panel-login">
                        <div class="panel-heading">
                            <div class="row mb_20">
                                <div class="col-xs-12 text-center sub_title"> <a href="#" class="active" id="login-form-link">Register</a> </div>
                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    @using (Ajax.BeginForm(opt))
                                    {
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "inputtype-new input-text required-entry validate-email", placeholder = "Name*", @autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "garden-error-span" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.ContactNo, new { @class = "inputtype-new input-text required-entry validate-email", placeholder = "Contact No*", @autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.ContactNo, "", new { @class = "garden-error-span" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "inputtype-new input-text required-entry validate-email", placeholder = "Email Id*", @autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "garden-error-span" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.Password, new { @class = "inputtype-new input-text required-entry validate-email", placeholder = "Create Password*", @autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "garden-error-span" })
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Register
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script>
            function ShowMsg(data) {
                if (data.status == true) {
                    alert(data.msg);
                    document.getElementById("Name").value = "";
                    document.getElementById("Email").value = "";
                    document.getElementById("ContactNo").value = "";
                    document.getElementById("Password").value = "";

                }
                else {
                    alert(data.msg);
                    document.getElementById("Name").value = "";
                    document.getElementById("Email").value = "";
                    document.getElementById("ContactNo").value = "";
                    document.getElementById("Password").value = "";
                }
            }
    </script>
}

<!-- =====  CONTAINER END  ===== --> 