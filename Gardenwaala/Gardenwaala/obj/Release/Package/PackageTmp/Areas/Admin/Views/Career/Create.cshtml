@model CareerViewModel

@{
    ViewBag.Heading = "Career";
    string action;
    ViewBag.CurrentMenu = "car";

    if (Model == null)
    {
        ViewBag.Title = "Create";
        action = "Create";
        ViewBag.Breadcrumbs = "New Career";
    }
    else
    {
        ViewBag.Title = "Edit";
        action = "Edit";
        ViewBag.Breadcrumbs = "Edit Career";
    }


}
<link href="~/Areas/Admin/AdminDesign/css/bootstrap-wysihtml5.css" rel="stylesheet" />
<div class="page-header">
    <h1>
        @action
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Career
        </small>
    </h1>
</div><!-- /.page-header -->
<div class="ace-settings-container" id="ace-settings-container">
    <div class="btn btn-app btn-xs btn-warning ace-settings-btn" id="ace-settings-btn">
        <i class="ace-icon fa fa-question-circle bigger-130"></i>
    </div>

    <div class="ace-settings-box clearfix" id="ace-settings-box">
        <h3>Help</h3>
        <p>
            Here you can introduce the detail information about up to date list of job openings.
        </p>
        <ul class="help_list">
            <li>Fill the necessary information according to your openings. </li>
        </ul>

    </div><!-- help-box -->
</div>
@Html.ValidationSummary(true, "Error", new { @class = "alert alert-danger" })
<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        @using (Html.BeginForm(action, "Career", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            if (action == "Edit")
            {
                @Html.HiddenFor(c => c.JobTitleId)
            }
            else
            {
                @Html.Hidden("JobTitleId", 0)
            }

            <div class="form-group">
                @Html.LabelFor(c => c.Position, new { @class = "col-sm-3 control-label no-padding-right" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.Position, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.Position, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Experience, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.Experience, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.Experience, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(c => c.Qualification, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.Qualification, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.Qualification, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Department, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.Department, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.Department, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Package, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.Package, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.Package, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.keyskills, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.keyskills, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.keyskills, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Openings, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.Openings, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @*@Html.ValidationMessageFor(c => c.Openings, "", new { @class = "col-xs-12 col-sm-6" })*@
                </div>
            </div>





            <div class="form-group">
                @Html.LabelFor(c => c.Requirements, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextAreaFor(c => c.Requirements, new { @class = "col-xs-10 col-sm-5 width-100", @rows = "10" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.Requirements, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Description, new { @class = "col-sm-3 control-label no-padding-right" })
                <div class="col-sm-9">
                    @Html.TextAreaFor(c => c.Description, new { @class = "col-xs-12 col-sm-6" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.Description, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.City, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.City, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.City, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Location, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    @Html.TextBoxFor(c => c.Location, new { @class = "col-xs-10 col-sm-5 width-100" })
                </div>
                <div class="col-sm-4">
                    @Html.ValidationMessageFor(c => c.Location, "", new { @class = "col-xs-12 col-sm-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Status, new { @class = "col-sm-3 control-label no-padding-right" })

                <div class="col-sm-5">
                    <div class="radio">
                        <label>
                            @Html.RadioButtonFor(c => c.Status, "true", new { @class = "ace", @checked = "checked" })
                            <span class="lbl"> Open</span>
                        </label>
                        <label>
                            @Html.RadioButtonFor(c => c.Status, "false", new { @class = "ace" })
                            <span class="lbl"> Closed</span>
                        </label>
                    </div>
                    <div class="radio">
                    </div>
                </div>
            </div>

            <div class="space-4"></div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        Submit
                    </button>
                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        Reset
                    </button>
                </div>
            </div>
        }
    </div>
</div>
@section Validation{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Areas/Admin/AdminDesign/js/chosen.jquery.min.js"></script>
    <script src="~/Areas/Admin/AdminDesign/js/wysihtml5-0.3.0.js"></script>
    <script src="~/Areas/Admin/AdminDesign/js/bootstrap-wysihtml5.js"></script>

    <script>
        $(document).ready(function () {
            $('#Requirements').wysihtml5();
        });
    </script>
}
